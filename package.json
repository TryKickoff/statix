{
  "name": "statix",
  "title": "Statix",
  "description": "A Tool for creating Static Sites and Component Libraries.",
  "version": "3.0.0",
  "homepage": "https://github.com/TryKickoff/statix",
  "repo": "https://github.com/trykickoff/statix/",
  "authors": [
    {
      "name": "Ashley Nolan",
      "url": "https://ashleynolan.co.uk"
    },
    {
      "name": "Zander Martineau",
      "url": "http://martineau.tv"
    }
  ],
  "contributors": [
    "Github contributors <https://github.com/trykickoff/statix/graphs/contributors>"
  ],
  "scripts": {
    "prestart": "npm prune && npm install",
    "start": "gulp serve",
    "predeploy": "npm prune && npm install --no-optional",
    "deploy": "RELEASE=true gulp compile",
    "info": "npm-scripts-info",
    "commit": "git-cz",
    "test": "npm run lint:js && npm run lint:css",
    "lint:js": "xo",
    "lint:css": "gulp test:css",
    "fix:js": "xo --fix",
    "release-patch": "release-it --non-interactive patch",
    "release-minor": "release-it --non-interactive minor",
    "release-major": "release-it --non-interactive major"
  },
  "scripts-info": {
    "test": "Run tests",
    "start": "Open starter checklist on trykickoff.com",
    "deploy": "Compile all assets for production deployment",
    "commit": "Commit using our standard git commit message format",
    "lint:js": "Lint JS using xo",
    "fix:js": "Fix JS linting issues using xo",
    "lint:css": "Lint CSS"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/TryKickoff/statix.git"
  },
  "bugs": {
    "url": "https://github.com/TryKickoff/statix/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=4.0"
  },
  "dependencies": {
    "console": "0.5.2",
    "copy-js": "0.1.1",
    "double-dollar": "1.0.0",
    "include-media": "1.4.9",
    "kickoff-fluidVideo.css": "1.1.0",
    "kickoff-grid.css": "1.1.2",
    "kickoff-utils.scss": "2.0.3",
    "kickoff-welcome.js": "1.4.0",
    "lite-ready": "1.0.4",
    "normalize-scss": "6.0.0",
    "svg4everybody": "2.1.8"
  },
  "devDependencies": {
    "assemble": "0.23.0",
    "autoprefixer": "^6.4.0",
    "babel-core": "6.24.1",
    "babel-loader": "7.0.0",
    "babel-plugin-transform-object-assign": "6.22.0",
    "babel-preset-es2015": "6.24.1",
    "browser-sync": "2.18.8",
    "case-sensitive-paths-webpack-plugin": "2.0.0",
    "cssnano": "3.10.0",
    "del": "2.2.2",
    "doiuse": "^2.4.1",
    "expand": "^0.4.3",
    "eyeglass": "1.2.1",
    "filesizegzip": "2.0.0",
    "gulp": "3.9.1",
    "gulp-banner": "0.1.3",
    "gulp-debug": "^2.1.2",
    "gulp-extname": "^0.2.2",
    "gulp-if": "2.0.1",
    "gulp-imagemin": "3.2.0",
    "gulp-plumber": "^1.1.0",
    "gulp-postcss": "6.4.0",
    "gulp-sass": "3.1.0",
    "gulp-sourcemaps": "^2.4.1",
    "gulp-stylelint": "3.9.0",
    "gulp-svgmin": "1.2.3",
    "gulp-svgstore": "6.1.0",
    "gulp-tap": "1.0.1",
    "gulp-util": "3.0.8",
    "helper-markdown": "^0.2.1",
    "helper-md": "^0.2.1",
    "imagemin-pngquant": "5.0.0",
    "opn": "5.0.0",
    "postcss-flexbugs-fixes": "2.1.1",
    "release-it": "^2.5.4",
    "stylelint": "7.10.1",
    "stylelint-config-standard": "16.0.0",
    "webpack": "2.5.0",
    "xo": "0.19.0"
  },
  "keywords": [
    "statix",
    "kickoff",
    "static site generator",
    "âš½"
  ],
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ]
    ],
    "plugins": [
      "transform-object-assign"
    ]
  },
  "xo": {
    "esnext": true,
    "global": [
      "window"
    ],
    "ignores": [
      "**/assets/src/js/standalone/**/*.js",
      "**/assets/dist/**/*.js",
      ".kickoff/**/*.js",
      "gulpfile.js"
    ],
    "rules": {
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "xo/filename-case": [
        "off"
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "indentation": [
        "tab",
        {
          "except": [
            "value"
          ]
        }
      ],
      "at-rule-empty-line-before": [
        "always",
        {
          "ignore": [
            "blockless-after-same-name-blockless",
            "blockless-group"
          ]
        }
      ],
      "declaration-empty-line-before": [
        "never"
      ],
      "rule-non-nested-empty-line-before": [
        "always-multi-line",
        {
          "except": [
            "after-single-line-comment"
          ],
          "ignore": [
            "after-comment"
          ]
        }
      ],
      "max-empty-lines": 2
    }
  }
}
